extends ../layouts/common

block content
    h1
        span User List: 
        a.btn.btn-success.mr-3(href="/users/create") Add new user!

    .d-flex.align-items-center
        form.d-flex.ml-auto(action="/users/search", method="GET")
            input(type="text", name="q", value=inputValue, class="form-control d-flex ml-2")
            button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Name
            th Phone
            th Actions

        each user in users
            tr
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light.text-align-right(href="/users/" + user.id) View