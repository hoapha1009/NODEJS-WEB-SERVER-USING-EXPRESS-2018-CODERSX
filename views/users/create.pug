extends ../layouts/common.pug

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post")
        .form-group
            label(for="name") Name
            input#name(type="text", name="name", class="form-control", value=values ? values.name : '')

        .form-group
            label(for="phone") Phone
            input#phone(type="text", name="phone", class="form-control", value=values ? values.name : '')

        button(type='submit' class="btn btn-primary") Create
