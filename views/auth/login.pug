extends ../layouts/common.pug

block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login", method="post")
        .form-group
            label(for="email") Email
            input#email(type="email", name="email", class="form-control", value=values ? values.email : '')

        .form-group
            label(for="password") Password
            input#password(type="password", name="password", class="form-control", value=values ? values.password : '')

        button(type='submit' class="btn btn-primary") Login
